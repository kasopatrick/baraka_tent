<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".supplies">


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/Image_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NotSibling,UnknownIdInLayout">

                <ImageView
                    android:id="@+id/Image1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/fressian" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="2dp"
                    android:paddingLeft="20sp"
                    android:text="This is a fressian cow in which we account them as our supplies in Trent's dairy farm,it's price starts from 80,000 shillings to 200,000 shillings "
                    android:textSize="18dp" />

        </LinearLayout>

